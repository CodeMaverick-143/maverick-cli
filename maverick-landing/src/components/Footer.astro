            <div>
                <h4 class="font-bold mb-4">Resources</h4>
                <ul class="space-y-2 text-gray-400">
                    <li>
                        <a href="#" class="hover:text-indigo-400 transition"
                            >Documentation</a>
                    </li>
                    <li>
                        <a href="#" class="hover:text-indigo-400 transition"
                            >API Reference</a>
                    </li>
                    <li>
                        <a href="#" class="hover:text-indigo-400 transition"
                            >Community</a>
                    </li>
                    <li>
                        <a href="#" class="hover:text-indigo-400 transition"
                            >Blog</a>
                    </li>
                </ul>
            </div>

            <div>
                <h4 class="font-bold mb-4">Legal</h4>
                <ul class="space-y-2 text-gray-400">
                    <li>
                        <a href="#" class="hover:text-indigo-400 transition"
