---
import { Rocket, Github } from "lucide-astro";
---

<section class="py-32 relative overflow-hidden">
    <!-- Glowing background -->
    <div
        class="absolute inset-0 bg-gradient-to-t from-indigo-900/40 via-gray-950 to-gray-950 -z-10"
    >
    </div>
    <div
        class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[1000px] h-[400px] bg-indigo-600/20 rounded-full blur-[120px] pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-6 text-center z-10 relative">
        <h2 class="text-4xl md:text-6xl font-bold mb-8 tracking-tight">
            Ready to code faster?
        </h2>
        <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
            Install the CLI today and experience the power of AI-driven
            development. Join thousands of developers building with Maverick.
        </p>

        <div
            class="flex flex-col sm:flex-row items-center justify-center gap-4"
        >
            <button
                class="px-8 py-4 rounded-full bg-white text-gray-950 font-bold hover:bg-gray-100 transition shadow-[0_0_40px_-10px_rgba(255,255,255,0.3)] hover:shadow-[0_0_60px_-15px_rgba(255,255,255,0.4)] flex items-center gap-2"
            >
                <Rocket class="w-5 h-5" />
                Start Using Maverick
            </button>

            <a
                href="https://github.com"
                target="_blank"
                rel="noopener noreferrer"
                class="px-8 py-4 rounded-full bg-white/5 text-white font-semibold hover:bg-white/10 transition backdrop-blur-sm border border-white/10 flex items-center gap-2"
            >
                <Github class="w-5 h-5" />
                Star on GitHub
            </a>
        </div>
    </div>
</section>
