---
import {
    CheckCircle2,
    Clock,
    Zap,
    Terminal,
    Globe,
    Cpu,
    Bot,
    Workflow,
} from "lucide-astro";

const features = [
    {
        name: "AI Chat",
        status: "Available",
        icon: Zap,
        description: "Context-aware chat with deep codebase understanding.",
    },
    {
        name: "CLI Tool",
        status: "Available",
        icon: Terminal,
        description:
            "Powerful command-line interface directly in your terminal.",
    },
    {
        name: "Web Dashboard",
        status: "Available",
        icon: Globe,
        description:
            "Visual interface to manage projects, history, and settings.",
    },
    {
        name: "Tool Integrations",
        status: "Available",
        icon: Cpu,
        description:
            "Connect with GitHub, Jira, and other developer tools seamlessly.",
    },
    {
        name: "Agentic Mode",
        status: "Coming Soon",
        icon: Bot,
        description:
            "Autonomous task execution, planning, and self-correction.",
    },
    {
        name: "Workflow Automation",
        status: "Coming Soon",
        icon: Workflow,
        description:
            "Chain tools together to automate complex repetitive tasks.",
    },
];
---

<section id="features" class="py-24 relative bg-gray-950">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-2xl mx-auto mb-16">
            <h2 class="text-3xl md:text-5xl font-bold mb-4">
                Everything You Need
            </h2>
            <p class="text-xl text-gray-400">
                A comprehensive toolkit designed for modern developers.
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                features.map((feature) => (
                    <div class="group p-8 rounded-2xl bg-white/5 border border-white/10 hover:border-indigo-500/30 hover:bg-white/[0.07] transition-all duration-300">
                        <div class="flex items-start justify-between mb-6">
                            <div class="p-3 rounded-lg bg-gray-800 text-indigo-400 group-hover:bg-indigo-500/20 group-hover:text-indigo-300 transition-colors">
                                <feature.icon class="w-6 h-6" />
                            </div>
                            <span
                                class:list={[
                                    "text-xs font-medium px-2.5 py-1 rounded-full border",
                                    feature.status === "Available"
                                        ? "bg-green-500/10 text-green-400 border-green-500/20"
                                        : "bg-yellow-500/10 text-yellow-400 border-yellow-500/20",
                                ]}
                            >
                                {feature.status}
                            </span>
                        </div>
                        <h3 class="text-xl font-semibold mb-3">
                            {feature.name}
                        </h3>
                        <p class="text-gray-400 leading-relaxed">
                            {feature.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
